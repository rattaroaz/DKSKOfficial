@page "/payroll"

<h3 class="text-center my-4">Payroll</h3>
<div class="container mt-3">
    <!-- Date Inputs -->
    <div class="row mb-3">
        <div class="col-12 col-md-6">
            Start Date:
            <input type="date" class="form-control" />
        </div>
        <div class="col-12 col-md-6">
            End Date:
            <input type="date" class="form-control" />
        </div>
    </div>

    <!-- Contractor Dropdown -->
    <div class="row mb-3">
        <div class="col-12">
            <select class="form-control" @bind="selectedValue">
                <option value="">Select Contractor</option>
                @foreach (var option in options)
                {
                    <option value="@option">@option</option>
                }
            </select>
        </div>
    </div>

    <!-- Table and Buttons -->
    @if (selectedValue != null)
    {
        <div class="row mb-3">
            <div class="col-12">
                <!-- Responsive Table Wrapper -->
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Invoice Number</th>
                                <th>Invoice Total</th>
                                <th>Paid to Contractor</th>
                                <th>Material Costs</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>4/2/2024</td>
                                <td>3344</td>
                                <td>$4562.33</td>
                                <td>$1200</td>
                                <td>$2112.23</td>
                            </tr>
                            <tr>
                                <td>3/21/2024</td>
                                <td>2234</td>
                                <td>$2362.33</td>
                                <td>$1233</td>
                                <td>$1578.27</td>
                            </tr>
                            <tr>
                                <td>2/21/2024</td>
                                <td>3343</td>
                                <td>$4862.33</td>
                                <td>$3212</td>
                                <td>$2295.21</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Download Buttons -->
        <div class="row mb-3">
            <div class="col-6">
                <input type="button" value="Download to PDF" class="btn btn-primary w-100" />
            </div>
            <div class="col-6">
                <input type="button" value="Download to Excel" class="btn btn-secondary w-100" />
            </div>
        </div>
    }
</div>

@code {
    private string? selectedValue;
    private List<string> options = new List<string> { "John Holmes", "Frank N. Stein", "Dragh U. Laugh", "Soop R. Mann", "Juan Dar Womon" };
}
