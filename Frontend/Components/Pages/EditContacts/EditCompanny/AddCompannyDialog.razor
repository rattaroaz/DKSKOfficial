@page "/add-companny-dialog"
@inject DialogService DialogService
@inject InvoiceService InvoiceService
@inject NotificationService NotificationService

<RadzenCard>

    <RadzenRow>
        <RadzenColumn>
            <strong>Name:</strong>
        </RadzenColumn>
        <RadzenColumn>
            <RadzenTextBox @bind-Value="companny.Name" style="width: 100%;" />
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
        <RadzenColumn>
            <strong>Ownner:</strong>
        </RadzenColumn>
        <RadzenColumn>
            <RadzenTextBox @bind-Value="companny.Ownner" style="width: 100%;" />
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
        <RadzenColumn>
            <strong>Cell Phone:</strong>
        </RadzenColumn>
        <RadzenColumn>
            <RadzenTextBox @bind-Value="companny.CellPhone" style="width: 100%;" />
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
        <RadzenColumn>
            <strong>E-mail:</strong>
        </RadzenColumn>
        <RadzenColumn>
            <RadzenTextBox @bind-Value="companny.CellPhone" style="width: 100%;" />
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
        <RadzenColumn>
            <strong>Address:</strong>
        </RadzenColumn>
        <RadzenColumn>
            <RadzenTextBox @bind-Value="companny.Address" style="width: 100%;" />
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
        <RadzenColumn>
            <strong>City:</strong>
        </RadzenColumn>
        <RadzenColumn>
            <RadzenTextBox @bind-Value="companny.City" style="width: 100%;" />
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
        <RadzenColumn>
            <strong>Zip:</strong>
        </RadzenColumn>
        <RadzenColumn>
            <RadzenTextBox @bind-Value="companny.Zip" style="width: 100%;" />
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
        <RadzenColumn>
            <strong>Special Note:</strong>
        </RadzenColumn>
        <RadzenColumn>
            <RadzenTextBox @bind-Value="companny.SpecialNote" style="width: 100%;" />
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow class="mt-4">
        <RadzenButton Text="Back" ButtonStyle="ButtonStyle.Secondary" Click="@CloseDialog" />
        <RadzenButton Text="Submit" ButtonStyle="ButtonStyle.Primary" Click="@OnSubmit" />
    </RadzenRow>
</RadzenCard>

