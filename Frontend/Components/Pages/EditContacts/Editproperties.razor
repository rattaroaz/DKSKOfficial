@page "/editcontacts/editproperties"

<div class="container mt-3">
    <!-- Input for Property and Add New Property Button -->
    <div class="row mb-3">
        <div class="col-12">
            Property:
            <input type="text" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <input type="button" value="Add New Property" @onclick="Done" class="btn btn-primary w-100" />
        </div>
    </div>

    <!-- Form for sValue = 2 (Property details) -->
    @if (sValue == 2)
    {
        <div class="row">
            <div class="col-12 col-md-6 mb-3">
                <input type="text" placeholder="Property name" class="form-control" />
            </div>
            <div class="col-12 col-md-6 mb-3">
                <input type="text" placeholder="Address" class="form-control" />
            </div>
            <div class="col-12 col-md-6 mb-3">
                <input type="text" placeholder="City" class="form-control" />
            </div>
            <div class="col-12 col-md-6 mb-3">
                <input type="text" placeholder="Zip" class="form-control" />
            </div>
            <div class="col-12 col-md-6 mb-3">
                <input type="text" placeholder="Gate Code" class="form-control" />
            </div>
            <div class="col-12 col-md-6 mb-3">
                <input type="text" placeholder="Lock Box Code" class="form-control" />
            </div>
            <div class="col-12 col-md-6 mb-3">
                <input type="text" placeholder="Supervisor" class="form-control" />
            </div>
            <div class="col-12 col-md-6 mb-3">
                <input type="text" placeholder="Manager" class="form-control" />
            </div>
            <div class="col-12 mb-3">
                <input type="text" placeholder="Special Note" class="form-control" />
            </div>

            <!-- Action Buttons -->
            <div class="row mb-3">
                <div class="col-12 col-md-4 mb-2">
                    <input type="button" value="Cancel" class="btn btn-danger w-100" />
                </div>
                <div class="col-12 col-md-4 mb-2">
                    <input type="button" value="Submit" class="btn btn-success w-100" />
                </div>
                <div class="col-12 col-md-4 mb-2">
                    <input type="button" value="Revert" class="btn btn-warning w-100" />
                </div>
            </div>
        </div>
    }
</div>

@code {
    int sValue = 1;
    private string? selectedValue;
    private List<string> options = new List<string> { "Great Properties, Inc", "Slave Driver Properties", "Usuck Management", "WTF Corp" };
    private void Done()
    {
        sValue = 2;
    }
}
