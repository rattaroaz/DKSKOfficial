@page "/payroll"

<h3>Payroll</h3>

<div>
    <RadzenLabel Text="Start Date"></RadzenLabel>
    <RadzenDatePicker @bind-Value=value Name="RadzenDatePickerBindValue8" ShowCalendarWeek />
</div>

<div>
    <RadzenLabel Text="End Date"></RadzenLabel>
    <RadzenDatePicker @bind-Value=@value Name="RadzenDatePickerBindValue1" ShowCalendarWeek />
</div>

<select @bind="selectedValue">
    @foreach (var option in options)
    {
        <option value="@option">@option</option>
    }
</select>

